  </div><br/>
  <div class="form-group">
    <%= f.label :price ,:class => "col-lg-2 control-label"%>
    <%= f.number_field :price , :class => "form-control"%>
  </div><br/>

  <div class="form-group">
  <%= label :image, 'Image' ,:class => "col-lg-2 control-label" %><br />
  <%= file_field_tag 'image', :class => "form-control" %>
</div><br/>
  
  <div class="form-group">
    <%= f.label :info ,:class => "col-lg-2 control-label" %>
    <%= f.text_area :info , :class => "form-control"%>
  </div><br/>
  <div class="form-group">
    <%= f.label :quantity ,:class => "col-lg-2 control-label"%>
    <%= f.number_field :quantity, :class => "form-control" %>
  </div><br/>
  <div >
      <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
